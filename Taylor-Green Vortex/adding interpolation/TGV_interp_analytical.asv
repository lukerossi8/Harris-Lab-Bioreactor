clearvars; close all; clc;
% Time range, constant values, and initial conditions
tspan = [0, 10];
mu = 10^-3; % Water dynamic viscosity at 20Â°C, in Pa*s

% Defining 3 microcarriers
r_i = 90e-6; % Microcarrier radii, in m
m = 2.79e-9; % Microcarrier mass, in kg

g = [0, -9.81]; % m/s^2
gx = g(1);
gy = g(2);
rho_f = 1000; % kg/m^3
n_microcarriers = length(m);
rho_i = m ./ (4 / 3 * pi * r_i.^3); % Density in g/cm^3

x0 = [0.02, 0.02]; % Initial position, m
v0 = [0, 0]; % Initial velocity, m/s
% Initial velocity values inspired by range seen in CMMC paper, Fig. 5A

% Define background velocity, x and y cpts
A_TG = 0.005; % Amplitude of the TG vortex, in m^2/s
L_TG = 0.1; % Length of the TG vortex, in m
n_step 9;
[X,Y] = meshgrid(-L_TG / 2 : L_TG / n_step : L_TG / 2);
psi_TG = -A_TG*cos(pi * X / L_TG) .* cos(pi * Y / L_TG);
vfx_disc = (A_TG * pi / L_TG) * cos(pi * X / L_TG) .* sin(pi * Y / L_TG);
vfy_disc = -(A_TG * pi / L_TG) * sin(pi * X / L_TG) .* cos(pi * Y / L_TG);

% Properly format initial conditions for ode45
x0_all = reshape(x0', [], 1);
v0_all = reshape(v0', [], 1);  % This converts the v0 matrix to a column vector
z0_all = [x0_all; v0_all];

% Define the analytical solution

vfx_cont = @(x, y) (A_TG * pi / L_TG) * cos(pi * x / L_TG) .* sin(pi * y / L_TG);
vfy_cont = @(x, y) -(A_TG * pi / L_TG) * sin(pi * x / L_TG) .* cos(pi * y / L_TG);

odeFun_a = @(t, z) eom_a(t, z, mu, r_i, vfx_cont, vfy_cont, m, gx, gy, rho_f, rho_i, n_microcarriers);
[t_a, z_all_a] = ode45(odeFun_a, tspan, z0_all);

function dzdt_a = eom_a(t, z, mu, r_i, vfx_cont, vfy_cont, m, gx, gy, rho_f, rho_i, n_microcarriers)
    dzdt_a = zeros(4 * n_microcarriers, 1);  % Initialize the output vector for all microcarriers
    % z vector takes the form [x1, y1, x2, y2, x3, y3, vx1, vy1, vx2, vy2, vx3, vy3]
    % Extract positions, velocities, and other parameters for each particle
    x = z(1:2:2*n_microcarriers);
    y = z(2:2:2*n_microcarriers);
    vx = z(2*n_microcarriers+1:2:end);  % x-velocity of particle i
    vy = z(2*n_microcarriers+2:2:end);      % y-velocity of particle i

    % Find the background flow at each particle's position
    vfx = vfx_cont(x, y);
    vfy = vfy_cont(x, y);

    % Position derivatives
    dxdt = vx;
    dydt = vy;

    % Drag and gravity force equations
    dvxdt = -(6 * pi * mu * r_i .* (vx - vfx)) ./ m + gx * (1 - rho_f ./ rho_i);
    dvydt = -(6 * pi * mu * r_i .* (vy - vfy)) ./ m + gy * (1 - rho_f ./ rho_i);

    % Store the position and velocity derivatives
    dzdt_a(1:2:2*n_microcarriers) = dxdt;
    dzdt_a(2:2:2*n_microcarriers) = dydt;
    dzdt_a(2*n_microcarriers+1:2:end) = dvxdt;
    dzdt_a(2*n_microcarriers+2:2:end) = dvydt;
end

odeFun_n = @(t, z) eom_n(t, z, mu, r_i, vfx_disc, vfy_disc, X, Y, m, gx, gy, rho_f, rho_i, n_microcarriers);
[t_n, z_all_n] = ode45(odeFun_n, tspan, z0_all);

% Fully vectorized numerical solution
function dzdt_n = eom_n(t, z, mu, r_i, vfx_disc, vfy_disc, X, Y, m, gx, gy, rho_f, rho_i, n_microcarriers)
    dzdt_n = zeros(4 * n_microcarriers, 1);  % Initialize the output vector for all microcarriers
    % z vector takes the form [x1, y1, x2, y2, x3, y3, vx1, vy1, vx2, vy2, vx3, vy3]
    % Extract positions, velocities, and other parameters for each particle
    x = z(1:2:2*n_microcarriers);
    y = z(2:2:2*n_microcarriers);
    vx = z(2*n_microcarriers+1:2:end);  % x-velocity of particle i
    vy = z(2*n_microcarriers+2:2:end);      % y-velocity of particle i

    % Interpolating to find background flow at the particle's position
    vfx = interp2(X, Y, vfx_disc, x, y);
    vfy = interp2(X, Y, vfy_disc, x, y);

    % Position derivatives
    dxdt = vx;
    dydt = vy;

    % Drag and gravity force equations
    dvxdt = -(6 * pi * mu * r_i .* (vx - vfx)) ./ m + gx * (1 - rho_f ./ rho_i);
    dvydt = -(6 * pi * mu * r_i .* (vy - vfy)) ./ m + gy * (1 - rho_f ./ rho_i);

    % Store the position and velocity derivatives
    dzdt_n(1:2:2*n_microcarriers) = dxdt;
    dzdt_n(2:2:2*n_microcarriers) = dydt;
    dzdt_n(2*n_microcarriers+1:2:end) = dvxdt;
    dzdt_n(2*n_microcarriers+2:2:end) = dvydt;
end

% Plot analytical trajectories
figure
hold on
col_list = ["red", "red", "blue", "blue", "green", "green"];
for i=1:n_microcarriers
    a = plot(z_all_a(:, 2*i - 1), z_all_a(:, 2*i), 'color', "#D95319");
    a_start = plot(x0_all(2*i - 1), x0_all(2*i), "or");
end
for i=1:n_microcarriers
    n = plot(z_all_n(:, 2*i - 1), z_all_n(:, 2*i), 'color', "black");
end
grid on
xlabel('x position (m)')
ylabel('y position (m)')
title('Interpolated and continuous trajectories of microcarriers in TGV, 30x30 grid')
legend([a n a_start], {'Cont. trajectory', 'Interp. trajectory', 'initial position'})

